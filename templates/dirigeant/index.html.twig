{% extends 'base.html.twig' %}

{% block title %}Liste des dirigeants{% endblock %}

{% block body %}

    <div class="row pl-4 pt-5">
        <a class="btn btn-sm btn-primary" href="{{ path('add_dirigeant') }}">Ajouter</a>
    </div>

    <div class="row message-content">
        {% for label, messages in app.flashes(['success', 'danger']) %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <div class="row p-4">
        <table class="table table-hover table-responsive-lg col-md-12">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>E-mail</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                    {% for dirigeant in dirigeants %}
                    {# {{ dump(ville) }} #}
                        <tr>
                            <td>{{ dirigeant.nom }}</td>
                            <td>{{ dirigeant.prenom }}</td>
                            <td>{{ dirigeant.email }}</td>
                            <td>
                                <a class="btn btn-sm btn-light btn-dirigeant" href="{{ path('edit_dirigeant', {'id': dirigeant.id}) }}">Edit</a>
                                <a class="btn btn-sm btn-danger btn-dirigeant"  onclick="confirm('Are you sure?'')" href="{{ path('delete_dirigeant', {'id': dirigeant.id}) }}">Delete</a>
                                {# {{ form(delete_form, {'attr': {'onclick': 'return confirm("Are you sure?")'}}) }} #}
                            </td>
                        </tr>
                    {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}